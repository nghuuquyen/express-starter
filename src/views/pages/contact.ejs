<section class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md m-auto">
    <h2 class="text-2xl font-bold mb-6">Contact Us</h2>

    <% if (errors && errors.length > 0) { %>
        <div class="bg-red-100 text-red-700 p-4 mb-6 rounded-lg">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form id="contactForm" action="/contact" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <div class="mb-4">
            <label for="name" class="block text-gray-700">Name</label>
            <input type="text" id="name" name="name"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                   value="<%= oldData ? oldData.name : '' %>">
        </div>
        <div class="mb-4">
            <label for="email" class="block text-gray-700">Email</label>
            <input type="email" id="email" name="email"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                   value="<%= oldData ? oldData.email : '' %>">
        </div>
        <div class="mb-4">
            <label for="message" class="block text-gray-700">Message</label>
            <textarea id="message" name="message" rows="4"
                      class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"><%= oldData ? oldData.message : '' %></textarea>
        </div>
        <button type="submit"
                class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">Send
        </button>
    </form>
</section>